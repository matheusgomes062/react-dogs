{
  "ecmaFeatures": {
      "modules": true,
      "spread" : true,
      "restParams" : true,
      "jsx": true
  },
  "env" : {
      "browser" : true,
      "node" : true,
      "es6" : true
  },
  "rules" : {
      "no-unused-vars" : 2,
      "no-undef" : 2
  },
  "parser": "@babel/eslint-parser",
  "parserOptions": {
      "requireConfigFile": false,
      "sourceType": "module",
      "ecmaVersion": 2020,
      "ecmaFeatures": {
        "jsx": false,
        "modules": true
      },
      "babelOptions": {
        "presets": ["@babel/preset-react"]
      }
  }
}